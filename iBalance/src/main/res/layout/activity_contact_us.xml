<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.builder.ibalance.ContactUs" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactus_number"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Or Mail Us at" />

    <TextView
        android:id="@+id/contactus_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:padding="10dp"
        android:text="+91 9739663487"
        android:textColor="#0000EE" />

    <TextView
        android:id="@+id/contactus_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:padding="10dp"
        android:text="simplyappcontact@gmail.com"
        android:textColor="#0000EE" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp"
        android:padding="10dp"
        android:text="You can contact us(Whatsapp) on" />

    <Button
        android:id="@+id/chat_now"
        style="@style/ussd_popup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contactus_mail"
        android:layout_alignRight="@+id/contactus_mail"
        android:layout_below="@+id/TextView01"
        android:text="Chat Now" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactus_mail"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Or" />

</RelativeLayout>