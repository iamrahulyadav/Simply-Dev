<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/grey"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/uasage_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center" 
        android:text="Total Usage" 
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/primary_green"
        />
    <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

    <TextView
    android:id="@+id/summary_local_carrier"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.6"
    android:gravity="left"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:text="Local mins to " />

     <TextView
        android:id="@+id/local_same"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left" 
        android:layout_weight="0.4"
        android:text="10 mins" 
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:visibility="gone"
        />
      <ProgressBar
         android:id="@+id/local_same_wait"
         style="?android:attr/progressBarStyleSmall"
         android:layout_width="0dp"
         android:layout_height="wrap_content" 
         android:layout_gravity="left"
       	 android:layout_weight="0.4"/>
     </LinearLayout>
     <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
      <TextView
        android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:gravity="left"
         android:layout_weight="0.6" 
        android:text="Local mins to Others" 
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        />
      <TextView
        android:id="@+id/local_others"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left" 
        android:layout_weight="0.4"
        android:text="10 mins" 
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:visibility="gone"
        />
      <ProgressBar
         android:id="@+id/local_other_wait"
         style="?android:attr/progressBarStyleSmall"
         android:layout_width="0dp"
         android:layout_height="wrap_content" 
         android:layout_gravity="left"
       	 android:layout_weight="0.4"/>
      </LinearLayout>
      <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
       <TextView
        android:id="@+id/summary_std_carrier" 
        android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:gravity="left"
         android:layout_weight="0.6"
        android:text="STD mins to " 
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        />
      <TextView
        android:id="@+id/std_same"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left" 
        android:layout_weight="0.4"
        android:text="10 mins" 
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:visibility="gone"
        />
      <ProgressBar
         android:id="@+id/std_same_wait"
         style="?android:attr/progressBarStyleSmall"
         android:layout_width="0dp"
         android:layout_height="wrap_content" 
         android:layout_gravity="left"
       	 android:layout_weight="0.4"/>
      </LinearLayout>
      <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left" 
        android:text="STD mins to Others" 
        android:layout_weight="0.6"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        />
      <TextView
        android:id="@+id/std_others"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left" 
        android:layout_weight="0.4"
        android:text="10 mins" 
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:visibility="gone"
        />
      <ProgressBar
         android:id="@+id/std_other_wait"
         style="?android:attr/progressBarStyleSmall"
         android:layout_width="0dp"
         android:layout_height="wrap_content" 
         android:layout_gravity="left"
       	 android:layout_weight="0.4"/>
        </LinearLayout>
<TextView
        android:id="@+id/recharge_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center" 
        android:text="Last Recharge" 
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary_green"
        />
<LinearLayout 
    android:id="@+id/last_recharge_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="gone">
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="0.3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Date" />

        <TextView
            android:id="@+id/summary_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            
            android:textColor="@android:color/darker_gray"
            android:text="" />
 
    </LinearLayout>
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="0.3">

        <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Amount" />

        <TextView
            
            android:id="@+id/summary_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@android:color/darker_gray"
            android:text="@string/rupee_symbol"/>
 
    </LinearLayout>
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="0.4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Plan Name" />

       
 
    </LinearLayout>
</LinearLayout>

<TextView
    android:id="@+id/no_recharge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="No Recharges Tracked"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginTop="10dp" />

<TextView
        android:id="@+id/fraud_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center" 
        android:text="Fraud/Suspicious Transactions" 
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/primary_green"
        android:layout_marginTop="10dp"
        />
<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="No Fraudlent/Suspicious Transactions found" 
            android:layout_marginBottom="10dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/whatsapp_share_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        
        android:layout_marginRight="2dp"
        android:background="@color/primary_green"
        android:text="Share App"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:background="@android:color/holo_orange_dark"
        android:text="FeedBack"
        android:textColor="@android:color/white" />
</LinearLayout>



</LinearLayout>



