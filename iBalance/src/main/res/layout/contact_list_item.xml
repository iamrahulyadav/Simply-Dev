<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp"
    android:layout_marginBottom="2dp"
    android:id="@+id/contact_list" >
 
    <!-- contact_picture -->
    <ImageView
        android:id="@+id/recents_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        android:contentDescription="contact"
        android:src="@drawable/default_contact_picture" />
 
    <!-- contact_name -->

    <TextView
        android:id="@+id/recents_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Holder"
        android:layout_alignTop="@+id/recents_picture"
        android:layout_toRightOf="@+id/recents_picture"
        android:textColor="@android:color/black"
        android:textSize="@dimen/contact_name" />
 
    <!-- contact_number -->

    <TextView
        android:id="@+id/recents_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recents_name"
        android:layout_marginTop="5dip"
        android:layout_toLeftOf="@+id/recents_duration"
        android:layout_toRightOf="@+id/recents_picture"
        android:textSize="@dimen/contact_number"
        android:text="9999999999"
        android:textColor="@android:color/darker_gray" />
     
    <!-- Circleand state -->

    <TextView
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Airtel,Karnataka"
        android:textColor="@android:color/darker_gray" 
        android:textSize="@dimen/circle"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/recents_duration"
        android:layout_toRightOf="@+id/recents_picture"
        android:layout_toEndOf="@+id/recents_picture"/>
    
 <!-- Duration in HH::MM::SS format -->

    <TextView
        android:id="@+id/contact_spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black" 
        android:text="Rs:1789.0"  />
 <!-- Cost -->
    <TextView
        android:id="@+id/recents_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/darker_gray" 
        android:text="00:00:00"
        />
 
</RelativeLayout>