<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_background"
              android:orientation="vertical">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:gravity="center_horizontal"
        android:id="@+id/summary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#000000" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/summary"
        android:background="#8c8c8c"
        android:id="@+id/textView46" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:id="@+id/recharge"
        android:layout_below="@+id/textView46"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#837E7E"
        android:paddingLeft="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:id="@+id/amount"
        android:textColor="#837E7E"
        android:layout_alignTop="@+id/recharge"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="5dp"
        android:paddingRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="953535499"
        android:id="@+id/mobile_no_id"
        android:layout_below="@+id/recharge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 230"
        android:id="@+id/amount_id"
        android:textSize="20dp"
        android:textColor="#1ad3a2"
        android:layout_below="@+id/recharge"
        android:layout_alignRight="@+id/amount"
        android:layout_alignEnd="@+id/amount"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airtel, Karnataka"
        android:id="@+id/carrier_circle_id"
        android:layout_below="@+id/mobile_no_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:textColor="#837E7E" />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Recharge options"
        android:id="@+id/textView49"
        android:layout_below="@+id/carrier_circle_id"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textColor="#000000" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/textView49"
        android:background="#8c8c8c"
        android:id="@+id/textView47" />


</RelativeLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"

    android:background="@color/light_grey"
    android:weightSum="3">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_weight="1">
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:id="@+id/paytm_recharge"
        android:background="@drawable/paytm"
        android:layout_below="@+id/textView47"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:text="Paytm"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:layout_weight="1">
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:id="@+id/mobikwik_recharge"
        android:background="@drawable/mobikwik"
        android:layout_below="@+id/textView47"
        android:layout_toRightOf="@+id/mobile_no_id"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:text="Mobikwik"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:layout_weight="1">
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:id="@+id/freecharge_recharge"
        android:background="@drawable/freecharge"
        android:layout_below="@+id/textView47"
        android:layout_toRightOf="@+id/imageButton2"
        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:text="FreeCharge"/>
        </LinearLayout>

</LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Note:- Though we take utmost care to display plans, some plans may be obsolete, please check with you operator"
        android:id="@+id/textView45"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/dark_grey"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

</LinearLayout>