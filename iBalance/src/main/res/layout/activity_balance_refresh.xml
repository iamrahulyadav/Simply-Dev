<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/dialog_background"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingTop="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/low_bal_header"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="5">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView10"
            android:src="@drawable/refresh_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/refresh_heading"
            android:layout_toStartOf="@+id/refresh_heading"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Airtel main balance "
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/refresh_heading"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/low_bal_header"
        android:background="#8c8c8c"
        android:id="@+id/low_separator" />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progressBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="18sp"
        android:id="@+id/wait_msg_id"
        android:text="waiting for message from airtel.."/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:visibility="gone"
        android:id="@+id/sorry_layout"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/imageView"
            android:src="@drawable/error_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/sorry__msg_id"
            android:text="Sorry Refresh Failed"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:visibility="gone"
        android:id="@+id/success_layout_bal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CURRENT BALANCE"
            android:textColor="@color/primary_green"
            android:layout_gravity="center"
            android:id="@+id/balance_type"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Rs 201.10"
            android:textSize="18sp"
            android:id="@+id/balance_text"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/success_layout_msg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/original_message_text"
            android:textColor="@color/dark_grey"
            android:textSize="15sp"
            android:background="@drawable/box_style"
            android:text="Lastcallchrg Rs=0.3040.LastCall Duration=00:00:19..Main Bal=15.5500.All Local+STD Calls at 1.2p/2sec for 60 Day in Rs32 .Benefit in4hr"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/layout_2"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To check balance dial below code"
            android:id="@+id/low_bal_text_id"
            android:layout_gravity="center"

            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_below="@+id/low_separator"
            android:layout_centerHorizontal="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <EditText
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/ussd_edit_id"
                android:layout_margin="10dp"
                android:textSize="24sp"
                android:text=" *123*8*7# "
                android:gravity="center"
                android:layout_gravity="center"
                android:inputType="phone"

                android:textColor="@color/black"
                android:padding="5dp"
                android:background="@drawable/box_style"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_alignBottom="@+id/ussd_edit_id"
                android:layout_toRightOf="@+id/ussd_edit_id"
                android:layout_toEndOf="@+id/ussd_edit_id" />
            <!--android:src="@drawable/edit"-->
        </RelativeLayout>


    </LinearLayout>




    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="10dp"
        android:background="#8c8c8c"
        android:layout_marginTop="10dp"
        android:id="@+id/low_separator2" />
    <!--TODO STYLE CHENGE-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Refresh"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/refresh_btn"
        style="@style/ussd_popup_button"
        android:visibility="visible"
        android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/sorry_layout_button"
        android:visibility="gone">
        <Button
            android:layout_width="wrap_content"
            style="@style/ussd_popup_button"
            android:layout_weight="0.5"
            android:layout_margin="15dp"
            android:layout_below="@+id/low_separator2"
            android:text="Cancel"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:id="@+id/cancel_btn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:layout_width="wrap_content"
            style="@style/ussd_popup_button"
            android:layout_margin="15dp"
            android:layout_weight="0.5"

            android:layout_below="@+id/low_separator2"
            android:text="Try Again"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:id="@+id/try_again_btn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/success_layout_button"
        android:visibility="gone">
        <Button
            android:layout_width="wrap_content"
            style="@style/ussd_popup_button"

            android:layout_weight="0.5"
            android:layout_margin="15dp"

            android:layout_below="@+id/low_separator2"
            android:text="Okay"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:id="@+id/refresh_btn_2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:layout_width="wrap_content"
            style="@style/ussd_popup_button"
            android:layout_margin="15dp"
            android:layout_weight="0.5"

            android:layout_below="@+id/low_separator2"
            android:text="Report"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:id="@+id/refresh_btn_3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>




</LinearLayout>